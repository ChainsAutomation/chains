ENV MYPASSWORD chains
RUN apt-get update && apt-get upgrade -y
RUN apt-get install -y git curl libudev1 libudev-dev python-software-properties openssh-server supervisor subversion zsh python-dev cython libusb-1.0-0 libusb-1.0-0-dev rrdtool python-rrdtool cec-utils libcec2 libcec-dev tcpdump tmux nginx
RUN pip install zeroconf psutil falcon uWSGI hidapi irc Phidgets scapy cec soco vobject pyhue lifxlan bitstring netaddr influxdb pyserial pyyaml
RUN pip install --pre pyusb
# Set root password
RUN echo "root:$MYPASSWORD" | chpasswd

